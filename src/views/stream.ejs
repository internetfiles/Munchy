<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Episode Detail</title>
    <style>
        body {
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <div class="space-y-6">
        <div class="flex flex-col gap-4">
            <div class="flex flex-col justify-start">
                <h2 class="text-white text-xl font-bold">
                    <%= data.episode.title %>
                </h2>
                <p class="text-white/75 text-base">Watching <%= data.episode.episode %></p>
            </div>
            <div class="flex justify-center items-center">
                <iframe src="<%= data.plyr %>" frameborder="0" allowfullscreen
                    class="w-full md:w-full lg:w-[1000px] h-auto md:h-[400px] lg:h-[500px] rounded-sm"></iframe>
            </div>
        </div>
        <div class="space-y-2">
            <div class="grid grid-cols-1 lg:grid-cols-[auto,1fr] gap-4">
                <div class="hidden lg:flex flex-col items-center gap-2">
                    <img src="<%= info.cover %>" alt="<%= info.title %>" title="<%= info.title %>"
                        class="w-56 h-80 rounded-sm object-cover">
                </div>
                <div class="flex flex-col gap-2">
                    <div class="flex items-center gap-2">
                        <p class="text-white/75 text-base font-medium">
                            <%= info.released %>
                        </p>
                        <i class="text-white font-black not-italic">â€¢</i>
                        <p class="text-white/75 text-base font-medium">
                            <%= info.status %>
                        </p>
                    </div>
                    <h2 class="text-white text-xl font-bold">
                        <%= info.title %>
                    </h2>
                    <div class="flex flex-wrap items-center gap-2">
                        <% info.genres.forEach(genre => { %>
                            <button type="button" class="bg-violet-600 text-white rounded-sm pt-0.5 pb-1 px-2">
                                <%= genre %>
                            </button>
                        <% }) %>
                    </div>
                    <p class="text-white max-h-44 overflow-y-auto pr-4">
                        <%= info.synopsis %>
                    </p>
                </div>
            </div>

            <!-- Adsterra Ad Code Here -->
            <center>
                <script type="text/javascript">
                    atOptions = {
                        'key' : 'dde9880ee191a4efc970ae24285b5a23',
                        'format' : 'iframe',
                        'height' : 50,
                        'width' : 320,
                        'params' : {}
                    };
                </script>
                <script type="text/javascript" src="//bracemascara.com/dde9880ee191a4efc970ae24285b5a23/invoke.js"></script>
            </center>

            <div class="flex justify-start items-center">
                <h2 class="text-white text-xl font-bold">Episodes List</h2>
            </div>
            <% if (info.episodes.length > 0) { %>
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-10 gap-2">
                    <% info.episodes.reverse().forEach(episode => { %>
                        <a href="/episode/<%= info.id %>/<%= episode.id %>"
                            class="bg-violet-600 text-white text-center rounded-sm py-1 px-2 hover:scale-95">
                            EP <%= episode.episode %>
                        </a>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="flex justify-center items-center h-32">
                    <h2 class="text-white text-xl font-bold">No Episodes Yet</h2>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Adsterra Ad Code in Footer -->
    <footer>
        <center>
            <script type="text/javascript">
                atOptions = {
                    'key' : 'dde9880ee191a4efc970ae24285b5a23',
                    'format' : 'iframe',
                    'height' : 50,
                    'width' : 320,
                    'params' : {}
                };
            </script>
            <script type="text/javascript" src="//bracemascara.com/dde9880ee191a4efc970ae24285b5a23/invoke.js"></script>
        </center>

        <!-- Additional Ad Code -->
        <center>
            <div class="separator" style="clear: both; margin-top: 0;">
                <a href="https://wa.link/o8ez3s" style="display: block; text-align: center;">
                    <img alt="" border="0" data-original-height="455" data-original-width="1200" src="https://i.ibb.co/K2S1T3z/Book-this-AD-Space-20240613-180725-0000.png" />
                </a>
            </div>
            <div style="position: relative; padding-bottom: 56.25%; height: 0;"></div>
        </center>
    </footer>
</body>
</html>
